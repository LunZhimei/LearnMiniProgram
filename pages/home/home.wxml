<!--pages/home/home.wxml-->


<!--1，数据绑定:{{}}语法 -->
<view bindtap="handleViewTag">Hello {{name}}</view>
<view>我的年龄：{{age}}</view>

<!-- 2，列表展示:wx:for -->
<view wx:for="{{students}}">{{item.name}}---{{item.age}}</view>

<!-- 3, 事件监听 -->
<view>当前计数：{{counter}}</view>
<button bindtap="addBtnClick" size="mini">+</button>
<button bindtap="subBtnClick" size="mini">-</button>